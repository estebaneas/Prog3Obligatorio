<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Alcaldía de Toledo</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Nombre de la aplicación", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Tipos Reclamo", "ListarReclamos", "TipoReclamo")</li>
                    <li>@Html.ActionLink("Reclamos", "ListarReclamos", "Reclamo")</li>
                    <li>@Html.ActionLink("Cuadrillas", "ListarCuadrillas", "Cuadrilla")</li>
                    <li>@Html.ActionLink("Zonas", "Zonas", "Zona")</li>
                    @{ try
                        {
                            if (@Session.Keys.Count > 0)
                            {
                                <li>@Html.ActionLink("Log Out", "LogOut", "Login")</li>
                            }
                            else
                            {
                                <li>@Html.ActionLink("Log In", "LogIn", "Login")</li>
                                <li>@Html.ActionLink("Registrarse", "AgregarUsuario", "Usuario")</li>
                            }
                        }
                        catch { }
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Alcaldía de toledo</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/estilos")
    @RenderSection("scripts", required: false)
</body>
</html>
