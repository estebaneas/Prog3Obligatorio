@model IEnumerable<Common.DTOs.DtoReclamo>

@{
    ViewBag.Title = "Listar Reclamos";
}


<h2>Reclamos</h2>
<hr />

<div class="row rowc ">
    <div class="col-lg-2 ">
        <label class="control-label pull-right">Fecha Ingresado</label>  
    </div>
    <div class="col-lg-2 ">
        <input  type="date" class="pull-left" id="fecha"/>
    </div>
    <div class="col-lg-2 ">
        <label class="control-label pull-right">Estado</label>
    </div>
    <div class="col-lg-2">
        @Html.DropDownList("Estado", (List<SelectListItem>)ViewBag.ListaEstados, "Estados", new { @class = "pull-left"})
    </div>
    <div class="col-lg-2 ">
        <label class="control-label pull-right">Cuadrilla</label>
    </div>
    <div class="col-lg-2 ">
        @Html.DropDownList("Cuadrilla", (List<SelectListItem>)ViewBag.ListaCuadrillas, "Cuadrillas", new { @class = "pull-left" })
    </div>
</div>
<div class="row rowc">
    <div class="col-lg-2 ">
        <label class="control-label pull-right">Tipo</label>
    </div>
    <div class="col-lg-2 ">
        @Html.DropDownList("TipoReclamo", (List<SelectListItem>)ViewBag.ListaTipos, "Tipo de reclamo", new { @class = "pull-left" })
    </div>
    <div class="col-lg-2 ">
        <label class="control-label pull-right ">Zona</label>    </div>
    <div class="col-lg-2 ">
        @Html.DropDownList("Zona", (List<SelectListItem>)ViewBag.ListaZonas, "Zonas", new { @class = "pull-left" })
    </div>

    <div class="col-lg-2">
        <label class="control-label pull-right">Resultados por pagina</label>
    </div>
    <div class="col-lg-2">
        
        <select id="paginas" class="pull-left" >
            <option value="10">10</option>
            <option value="20">20</option>
            <option value="50">50</option>
            <option value="100">100</option>
        </select>
    </div>
</div>
<input id="ZonaRes" class="hidden"/>
<input  id="CuadrillaRes" class="hidden" />
<input  id="TipoReclamoRes"class="hidden"/>
<input id="EstadoRes" class="hidden"/>
<input id="FechaRes" class="hidden"/>
<input  id="PaginasRes" class="hidden"/>

<div class="row rowc ">
    <div class="col-lg-12 text-center">
        <input id="btnFiltrar" type="button" value="Filtrar" class="btn btn-info" onclick="cargarReclamos(null,'target',1,'','btnRec','','','','','','',true)"/>
    </div>
</div>


<hr />

<div id="target">
    @Html.Partial("_ListarReclamosPartial")
</div>

@Styles.Render("~/Content/estilos")