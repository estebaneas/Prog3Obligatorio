@model IEnumerable<Common.DTOs.DtoReclamo>

@{
    ViewBag.Title = "Listar Reclamos";
}

<h2>ListarReclamo</h2>

<p>
    @Html.ActionLink("Agregar Reclamo", "Agregar", "Reclamo")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.numero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaIngreso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.observaciones)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.numero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaIngreso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.observaciones)
        </td>
        <td>
            @Html.ActionLink("Ver historial", "../HistorialCambios/ListarHistorialCambios", new { nroReclamo = item.numero }) |
        </td>
    </tr>
}

</table>
